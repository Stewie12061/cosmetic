<div class="flex-shrink-0 dropdown user-navbar">
  <%= link_to 'javascript:void(0)', class: 'd-block link-dark text-decoration-none dropdown-toggle', id: 'dropdownUser2', data: { 'bs-toggle': 'dropdown' }, aria: { expanded: 'false' } do %>
    <%= image_tag 'https://github.com/mdo.png', class: 'rounded-circle', width: 32, height: 32, alt: 'user' %>
  <% end %>

  <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
    <li>
      <%= link_to t('navbar.auth.settings'), 'javascript:void(0)', 
        class: 'dropdown-item text-capitalize' %>
    </li>

    <li>
      <%= link_to t('navbar.auth.profile'), 'javascript:void(0)', 
        class: 'dropdown-item text-capitalize' %>
    </li>

    <li><hr class="dropdown-divider"></li>

    <li>
      <%= link_to t('navbar.auth.signout'), destroy_user_session_path, 
        data: { confirm: t('confirm.signout'), method: 'delete' }, 
        class: 'dropdown-item text-capitalize' %>
    </li>
  </ul>
</div>