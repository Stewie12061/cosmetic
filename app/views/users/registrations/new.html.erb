<div class="row">
  <div class="w-50 m-auto">

    <h1 class="text-center text-capitalize"><%= t('headers.signup') %></h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group mb-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: false, placeholder: placeholder_text('email_address'), class: 'form-control shadow-none text-capitalize' %>
      </div>

      <div class="form-group mb-2">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length.one', count: @minimum_password_length)%></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: placeholder_text('password'), class: 'form-control shadow-none text-capitalize' %>
      </div>

      <div class="form-group mb-2">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: placeholder_text('password_confirmation'), class: 'form-control shadow-none text-capitalize' %>
      </div>

      <div class="form-group mb-2">
        <%= f.submit t('buttons.signup'), class: "btn btn-primary btn-block btn-lg text-capitalize" %>
      </div>
    <% end %>
  </div>
</div>