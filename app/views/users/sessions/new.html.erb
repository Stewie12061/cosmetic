<div class="row">
  <div class="w-50 m-auto">
    <h1 class="text-center text-capitalize"><%= t('headers.login') %></h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mb-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: placeholder_text('email_address'), class: 'form-control shadow-none text-capitalize' %>
      </div>

      <div class="form-group mb-2">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", placeholder: placeholder_text('password'), class: 'form-control shadow-none text-capitalize' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group mb-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="form-group">
          <%= f.submit t('buttons.login'), class: "btn btn-primary btn-block btn-lg text-capitalize" %>
      </div>
    <% end %>
    </div>
</div>